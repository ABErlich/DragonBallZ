import java.util.ArrayList;
import java.util.HashMap;
import java.util.Map;

public class Tablero {
	
	public Tablero(int pTamanio){
		this.celdas = new ArrayList<Celda>();
		this.celdasOcupadas = new HashMap<Ubicable, Celda>();
		
		for(int i = 0; i < pTamanio; i++){
			for(int j = 0; j<pTamanio; j++){
				Celda celda = new Celda(new Coordenada(i,j));
				this.celdas.add(celda);
			}
		}
	}
	
	private ArrayList<Celda> celdas;
	private Map<Ubicable, Celda> celdasOcupadas;
	
	public boolean PuedeUbicar(Coordenada pCoordenada){
		
	}
	
	public void Ubicar(Ubicable pUbicable, Coordenada pCoordenada){
		celdasOcupadas.put(pUbicable, new Celda(pCoordenada));
	}

	public Coordenada obtenerPosicionDe(Ubicable pUbicable) {
		return celdasOcupadas.get(pUbicable)
	}
	
