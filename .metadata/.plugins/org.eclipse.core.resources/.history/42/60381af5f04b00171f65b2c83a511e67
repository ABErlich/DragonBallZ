package fiuba.algo3.modelo.tablero;

import fiuba.algo3.modelo.personajes.Goku;
import fiuba.algo3.modelo.tablero.Celda;
import fiuba.algo3.modelo.tablero.Coordenada;
import fiuba.algo3.modelo.tablero.Ubicable;



import java.util.ArrayList;
import java.util.HashMap;
import java.util.Map;

public class Tablero {
	
	public Tablero(int pTamanio){
		this.celdas = new HashMap<Coordenada, Celda>();
		this.celdasOcupadas = new HashMap<Ubicable, Celda>();
		
		for(int i = 0; i < pTamanio; i++){
			for(int j = 0; j < pTamanio; j++){
				Coordenada coord = new Coordenada(i,j);
				this.celdas.put(coord, new Celda(coord));
			}
		}
	}
	
	private Map<Coordenada, Celda> celdas;
	private Map<Ubicable, Celda> celdasOcupadas;
	
	public boolean PuedeUbicar(Coordenada pCoordenada){
		if(celdas.get(pCoordenada).estaOcupada()){
			return false;
		}else{
			return true;
		}
	}
	
	public void Ubicar(Ubicable pUbicable, Coordenada pCoordenada){
		celdasOcupadas.put(pUbicable, new Celda(pCoordenada));
	}

	public Coordenada obtenerPosicionDe(Ubicable pUbicable) {
		return celdasOcupadas.get(pUbicable).getCoordenada();
	}

	
}
